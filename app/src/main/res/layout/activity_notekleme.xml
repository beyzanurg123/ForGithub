<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33D0E4"
    tools:context=".notekleme">
<EditText
        android:id="@+id/ogrno"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="öğrenci no"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#AE0303"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ogrpuan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ogrpuan"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="puan"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#AE0303"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonıd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ogrno" />

    <Button
        android:id="@+id/buttonıd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="41dp"
        android:text="EKLE"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/ogrpuan"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/ogrpuan" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="363dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="37dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonıd" />
</androidx.constraintlayout.widget.ConstraintLayout>